      "name": "Contacts",
      "description": "Contact management operations",
      "note": "Core CRM functionality for managing customer information, tags, tasks, and notes. Essential for lead management and customer relationship building.",
      "endpoints": [
        {
          "name": "Create Contact",
          "method": "POST",
          "path": "/contacts/",
          "description": "Create a new contact",
          "parameters": {
            "body": {
              "firstName": {"type": "string", "required": false},
              "lastName": {"type": "string", "required": false},
              "email": {"type": "string", "required": false},
              "phone": {"type": "string", "required": false},
              "locationId": {"type": "string", "required": true},
              "tags": {"type": "array", "required": false},
              "customFields": {"type": "object", "required": false}
            }
          }
        },
        {
          "name": "Get Contact",
          "method": "GET",
          "path": "/contacts/{contactId}",
          "description": "Get contact by ID",
          "parameters": {
            "path": {
              "contactId": {"type": "string", "required": true}
            }
          }
        },
        {
          "name": "Update Contact",
          "method": "PUT",
          "path": "/contacts/{contactId}",
          "description": "Update existing contact",
          "parameters": {
            "path": {
              "contactId": {"type": "string", "required": true}
            },
            "body": {
              "firstName": {"type": "string", "required": false},
              "lastName": {"type": "string", "required": false},
              "email": {"type": "string", "required": false},
              "phone": {"type": "string", "required": false}
            }
          }
        },
        {
          "name": "Delete Contact",
          "method": "DELETE",
          "path": "/contacts/{contactId}",
          "description": "Delete contact",
          "parameters": {
            "path": {
              "contactId": {"type": "string", "required": true}
            }
          }
        },
        {
          "name": "Search Contacts",
          "method": "POST",
          "path": "/contacts/search",
          "description": "Search contacts with filters",
          "parameters": {
            "body": {
              "locationId": {"type": "string", "required": true},
              "query": {"type": "string", "required": false},
              "limit": {"type": "number", "required": false},
              "skip": {"type": "number", "required": false}
            }
          }
        },
        {
          "name": "Get All Contacts",
          "method": "GET",
          "path": "/contacts/",
          "description": "Get all contacts",
          "parameters": {
            "query": {
              "locationId": {"type": "string", "required": true},
              "limit": {"type": "number", "required": false},
              "skip": {"type": "number", "required": false}
            }
          }
        },
        {
          "name": "Add Contact Tags",
          "method": "POST",
          "path": "/contacts/{contactId}/tags",
          "description": "Add tags to contact",
          "parameters": {
            "path": {
              "contactId": {"type": "string", "required": true}
            },
            "body": {
              "tags": {"type": "array", "required": true}
            }
          }
        },
        {
          "name": "Remove Contact Tags",
          "method": "DELETE",
          "path": "/contacts/{contactId}/tags",
          "description": "Remove tags from contact",
          "parameters": {
            "path": {
              "contactId": {"type": "string", "required": true}
            },
            "body": {
              "tags": {"type": "array", "required": true}
            }
          }
