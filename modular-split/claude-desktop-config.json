{
  "mcpServers": {
    "ghl-core": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://ghl-core-mcp.fly.dev/sse",
        "--header",
        "X-GHL-API-Key: ${GHL_API_KEY}",
        "--header",
        "X-GHL-Location-ID: ${GHL_LOCATION_ID}"
      ],
      "env": {
        "GHL_API_KEY": "your_private_integrations_api_key",
        "GHL_LOCATION_ID": "your_location_id"
      }
    },
